# def

def season(month):
    """
    """
    if month==12 or month<3:

        return 'winter'
    elif month==3 or month<6:
        return 'spring'

    elif month==6 or month<9:
        return 'summer'

    else:
        return 'spring'
month=input('month:')

while True:
    if month==0:
        print('such month doesnt exist')
        print('use only integer')
        month=input('enter month:')
        continue
    else:
        break

month=int(month)
answer=season(month)
print(answer)


    

